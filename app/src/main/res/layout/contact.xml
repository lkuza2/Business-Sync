<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        card_view:cardCornerRadius="4dp" android:paddingBottom="5dp">
        <RelativeLayout
                android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
        <ImageView
                android:layout_height="200dp"
                app:srcCompat="@drawable/com_facebook_button_icon_blue"
                android:id="@+id/contact_profile_image"
                android:layout_centerInParent="false"
                android:layout_alignWithParentIfMissing="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false" android:layout_margin="5dp" android:layout_width="150dp"
                android:elevation="1dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_below="@+id/contact_full_name"
                    android:layout_alignStart="@+id/contact_full_name" android:layout_marginTop="23dp"
                    android:id="@+id/contact_company_name"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_below="@+id/contact_company_name"
                    android:layout_alignStart="@+id/contact_company_name" android:layout_marginTop="18dp"
                    android:id="@+id/contact_phone"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_below="@+id/contact_phone"
                    android:layout_alignStart="@+id/contact_phone" android:layout_marginTop="13dp"
                    android:id="@+id/contact_wrk_email"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/contact_full_name"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="18dp" android:layout_alignTop="@+id/contact_profile_image"
                    android:layout_toEndOf="@+id/contact_profile_image"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

